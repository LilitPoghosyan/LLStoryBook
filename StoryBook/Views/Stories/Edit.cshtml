        <div class="form-group">
            <label class="control-label col-md-2">Groups</label>
            <div class="col-md-10">
                @foreach (var dic in Model.AllGroups)
                {
                    <div class="form-group">
                        @Html.Label(dic.Key, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AllGroups[dic.Key])
